<div data-controller="exosky">
  
  <div class="absolute top-4 left-4 z-50">
    <label for="exoplanet-select" class="text-white font-bold">Select an Exoplanet:</label>
    <select id="exoplanet-select" 
            data-action="change->exosky#selectExoplanet" 
            data-exosky-target="exoplanet"
            class="mt-2 p-2 bg-gray-900 text-white rounded-lg border border-gray-600 shadow-lg hover:shadow-cyan-500/50 focus:ring-4 focus:ring-cyan-300 focus:outline-none transition duration-300 ease-in-out">
      <option value="">Select an Exoplanet</option>
      <% @exoplanets.each do |exoplanet| %>
        <option value="<%= exoplanet.id %>"><%= exoplanet.pl_name %></option>
      <% end %>
    </select>
  </div>

  <div data-exosky-target="canvas" class="w-full h-full"></div>
</div>